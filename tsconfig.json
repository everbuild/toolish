{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ESNext",
      "dom"
    ],
    "moduleDetection": "force",
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "${configDir}/dist/dts",
    "stripInternal": true,
    "outDir": "${configDir}/dist",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
